<%= render "shared/header" %>

<div class='main'>
  <%# 商品名検索 %>
  <div class="item-search">
    <div class='item-search-title'>商品検索</div>
    <%= search_form_for @q, url: search_items_path, class:"search-input-form" do |f| %>
      <%= f.label :name_cont, '商品名', class:"search-input-name" %>
      <%= f.search_field :name_cont, class:"search-input-space" %>
      <%= f.label :lecture_eq, '講義名', class:"search-input-lecture" %>
      <%= f.search_field :lecture_eq, class:"search-input-space", placeholder:"全角で正しく入力" %>
      <%= f.label :teacher_eq, '先生名', class:"search-input-teacher" %>
      <%= f.search_field :teacher_eq, class:"search-input-space", placeholder:"全角で正しく入力" %>
      <%= f.submit '検索', class:"search-btn"%>
    <% end %>
  </div>
  <%# /商品名検索 %>
  <%# 商品一覧表示 %>
  <div class='item-contents'>
    <h2 class='title'>検索結果一覧</h2>
    <ul class='item-lists'>
      <% if @results[0] != nil %>
        <% @results.each do |item| %>
          <li class='list'>
            <%=link_to item_path(item.id) do %>
              <div class='item-img-content'>
                <%= image_tag item.image, class: "item-img" %>
              </div>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= item.name %>
                </h3>
                <div class='item-info-sub'>
                  <span><%= item.price.to_s(:delimited) %>円
                  <br><%= item.user.university.name %>
                  <br><%= item.year_period.name %>
                  <br><%= item.lecture %>
                  <br><%= item.teacher %></span>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      <% else %>
        <div class='item-no-message'>
          検索結果に一致する商品はありません
        </div>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧表示 %>
</div>

<%= render "shared/footer" %>