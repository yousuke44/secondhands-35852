<header class='top-page-header'>
  <div class="left-contents">
    <ul class="left-list">
      <% if user_signed_in? %>
        <li><%= link_to image_tag("secondhands-logo.png", class: "secondhands-icon"), "/" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn-square" %></li>
        <li><%= link_to 'マイページ', "#", class: "btn-square" %></li>
      <% else %>
        <li><%= link_to image_tag("secondhands-logo.png", class: "secondhands-icon"), "/" %></li>
        <li><%= link_to ' ログイン ', new_user_session_path, class: "btn-square" %></li>
        <li><%= link_to '新規会員登録', new_user_registration_path, class: "btn-square-2" %></li>
      <% end %>
    </ul>
  </div>
  <div class="right-contents">
    <div class="right-list">
      <% if user_signed_in? %>
        <%= link_to "ようこそ  " + current_user.nickname + " さん", "#", class: "user-nickname" %> 
      <% else %>
        <%= link_to 'こんにちは ゲストさん', "#", class: "user-nickname" %>
      <% end %>
    </div>
  </div>
</header>